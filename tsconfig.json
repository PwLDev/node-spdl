{
  "compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"declaration": true,
		"outDir": "./dist",
		"declarationDir": "./dist/types",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
  	"include": ["src/**/*"]
}
